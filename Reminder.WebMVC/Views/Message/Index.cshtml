@model IEnumerable<Reminder.Models.MessageListInbox>

@{
    ViewBag.Title = "Index";
}

<h2>Inbox</h2>

@Html.ActionLink("Inbox", "Index", "Message", new { @class = "btn btn-secondary" })
@Html.ActionLink("Outbox", "Outbox", "Message", new { @class = "btn btn-primary" })

<p>
    @Html.ActionLink("Create a message", "Create", "Message", new { @class = "btn btn-success" })
</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WhenSent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SenderName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MessageText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhenRead)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.WhenSent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SenderName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MessageText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WhenRead)
                </td>
                <td>
                    @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-search" }) |
                    @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-remove" })
                </td>
            </tr>
        }

    </table>
</div>