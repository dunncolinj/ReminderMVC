@model IEnumerable<Reminder.Models.MessageListOutbox>

@{
    ViewBag.Title = "Outbox";
}

<h2>Outbox</h2>

@Html.ActionLink("Inbox", "Index", "Message", new { @class = "btn btn-primary" })
@Html.ActionLink("Outbox", "Outbox", "Message", new { @class = "btn btn-secondary" })

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WhenSent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecipientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MessageText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhenRead)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.WhenSent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RecipientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MessageText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WhenRead)
                </td>
                <td>
                    @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-search" })
                </td>
            </tr>
        }

    </table>
</div>